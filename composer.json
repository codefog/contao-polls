{
    "name": "codefog/contao-polls",
    "description": "polls extension for Contao Open Source CMS",
    "keywords": ["contao", "poll", "polls", "survey"],
    "type": "contao-module",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Codefog",
            "homepage": "http://codefog.pl"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "contao/core-bundle":"~3.5 || ~4.1",
        "contao-community-alliance/composer-plugin":"^2.4.1 || ~3.0"
    },
    "suggest" : {
        "terminal42/dc_multilingual": "Adds the multilingual features"
    },
    "conflict": {
        "contao-legacy/polls": "*"
    },
    "replace": {
        "contao-legacy/polls": "self.version"
    },
    "extra": {
        "contao": {
            "sources": {
                "": "system/modules/polls"
            }
        }
    }
}
