{
    "name": "codefog/contao-polls",
    "description": "polls extension for Contao Open Source CMS",
    "keywords": ["contao", "poll", "polls", "survey"],
    "type": "contao-module",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Codefog",
            "homepage": "http://codefog.pl"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "contao/core": ">=3.2",
        "contao-community-alliance/composer-plugin": "2.*"
    },
    "suggest" : {
        "terminal42/dc_multilingual": "Adds the multilingual features"
    },
    "extra": {
        "contao": {
            "sources": {
                "": "system/modules/polls"
            },
            "transifex": {
                "project": "contao-polls",
                "prefix": "master-",
                "languages_cto": "languages",
                "languages_tx": ".tx"
            }
        }
    }
}
