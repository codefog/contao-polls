{
    "name": "codefog/contao-polls",
    "description": "polls extension for Contao Open Source CMS",
    "keywords": ["contao", "poll", "polls", "survey"],
    "type": "contao-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Codefog",
            "homepage": "https://codefog.pl"
        }
    ],
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^5.3",
        "codefog/contao-haste": "^5.2"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "terminal42/contao-build-tools": "@dev",
        "terminal42/dc_multilingual": "^4.6"
    },
    "suggest" : {
        "terminal42/dc_multilingual": "Adds the multilingual features"
    },
    "autoload": {
        "psr-4": {
            "Codefog\\PollsBundle\\": "src"
        }
    },
    "extra": {
        "contao-manager-plugin": "Codefog\\PollsBundle\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "terminal42/contao-build-tools": true,
            "php-http/discovery": true
        }
    }
}
